<apex:page controller="MyAccountController">

    <apex:pageBlock title="ðŸ“Š Sales Dashboard">

        <!-- ====== æ•°æ®è¡¨æ ¼ ====== -->
        <apex:pageBlockTable value="{!salesList}" var="row">

            <apex:column headerValue="Product">
                {!row.productName}
            </apex:column>

            <apex:column headerValue="Quantity">
                {!row.quantity}
            </apex:column>

            <apex:column headerValue="Revenue ($)">
                {!row.revenue}
            </apex:column>

            <apex:column headerValue="Cost ($)">
                {!row.cost}
            </apex:column>

            <apex:column headerValue="Profit ($)">
                {!row.profit}
            </apex:column>

        </apex:pageBlockTable>

        <br/>

        <!-- ====== æ”¶å…¥æŸ±çŠ¶å›¾ ====== -->
        <apex:chart data="{!salesList}" height="300" width="600">

            <apex:legend position="right"/>

            <apex:barSeries 
                axis="left"
                orientation="vertical"
                xField="productName"
                yField="revenue"
                title="Revenue by Product"/>

            <apex:axis type="Numeric" position="left" fields="revenue" title="Revenue"/>
            <apex:axis type="Category" position="bottom" fields="productName" title="Product"/>

        </apex:chart>

        <br/>

        <!-- ====== åˆ©æ¶¦é¥¼å›¾ ====== -->
        <apex:chart data="{!salesList}" height="300" width="600">

            <apex:legend position="right"/>

            <apex:pieSeries 
                dataField="profit"
                labelField="productName"
            />

        </apex:chart>

    </apex:pageBlock>

</apex:page>
